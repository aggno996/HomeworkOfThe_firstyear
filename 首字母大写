#include"stdio.h" 
#include<string.h>
int main() 
{ 
    char str[100];
    while(1){
        // 读取字符串
        if(scanf("%s", str) != 1) break;
        int len = strlen(str);
        // 处理第一个字符：小写转大写
        if(str[0] >= 'a' && str[0] <= 'z'){
            str[0] -= 32;  // 小写转大写是减32
        }
        // 处理空格后的字符
        for(int i = 1; i < len - 1; i++){  // 从1开始，避免越界
            if(str[i] == ' ' && str[i+1] >= 'a' && str[i+1] <= 'z'){
                str[i+1] -= 32;  // 空格后的字母小写转大写
            }
        }
        // 立即输出处理后的字符串
        printf("%s ", str);
    }
    return 0;
}
