#include <stdio.h>
#include <string.h>

#define SIZE 100

int isPalindrome(char arr[], int len);

int main() {
    /**** 输入字符串,调用函数isPalindrome判断是否为回文串，然后输出结果 *******/ 
    /**********  Begin ***********/
    char arr[SIZE] = {0};
    
    // 使用 scanf 读取字符串
    scanf("%s", arr);
    
    // 使用 strlen 计算字符串长度
    int len = strlen(arr);
    
    if (isPalindrome(arr, len)) 
        printf("Yes");
    else 
        printf("No");
    /**********  End  **********/
    return 0;
}

/**** 在下面编写满足任务要求的递归函数isPalindrome，是回文返回1，不是返回0 *******/ 
int isPalindrome(char arr[], int len) {
    if (len == 1 || len == 0) {
        return 1;
    }
    if (arr[0] != arr[len - 1]) {
        return 0;
    }
    else {
        return isPalindrome(arr + 1, len - 2);
    }
}
