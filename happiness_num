#include <stdio.h>
int happiness(int num, int times, int memo[]);
int judge(int num, int memo[],int times);
int calculate(int num);
int main() {
	int num;
	int memo[1000] = { 0 };
	int times = 0;
	scanf("%d", &num);
	printf("%d\n", happiness(num, times, memo));
}
int happiness(int num, int times, int memo[]) {
	if (calculate(num) == 1) return 1;
	else {
		memo[times] = calculate(num);
	}
	if (judge(calculate(num), memo,times)) return 0;
	else {
		return happiness(calculate(num), times + 1, memo);
	}
}
int calculate(int num) {
	int sum = 0;
	int digit[10] = { 0 };
	int count = 0;
	while (num > 0) {
		digit[count] = num % 10;
		sum += digit[count] * digit[count];
		num /= 10;
	}
	return sum;
}
int judge(int num, int memo[],int times) {
	int i;
	for (i = 0; i < times; i++) {
		if (memo[i] == num) return 1;
	}
	return 0;
}
